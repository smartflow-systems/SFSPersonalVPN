# SFS PersonalVPN - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ============================================
# VPN Backend Configuration
# ============================================
VPN_API_URL=https://api.yourvpn.com
VPN_API_KEY=your_api_key_here
VPN_API_VERSION=v1

# ============================================
# Security Settings
# ============================================
ENABLE_ENCRYPTION=true
ENCRYPTION_KEY=your_encryption_key_here
ENCRYPTION_ALGORITHM=AES-256-GCM

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600

# ============================================
# Server Configuration
# ============================================
PORT=8080
HOST=localhost
NODE_ENV=development

# HTTPS Configuration (production)
HTTPS_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ============================================
# VPN Protocol Settings
# ============================================
# Supported: openvpn, wireguard, ikev2
VPN_PROTOCOL=openvpn

# OpenVPN Settings
OPENVPN_CONFIG_PATH=/etc/openvpn/config
OPENVPN_PORT=1194

# WireGuard Settings
WIREGUARD_CONFIG_PATH=/etc/wireguard/wg0.conf
WIREGUARD_PORT=51820

# ============================================
# Database Configuration (optional)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/sfs_vpn
DATABASE_POOL_SIZE=10
DATABASE_SSL=true

# ============================================
# Analytics Configuration
# ============================================
ANALYTICS_ENABLED=false
ANALYTICS_KEY=your_analytics_key_here
ANALYTICS_ENDPOINT=https://analytics.yourdomain.com

# Google Analytics (optional)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# Monitoring and Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/sfs-vpn/app.log

# Sentry Error Tracking (optional)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# ============================================
# Security Monitoring Settings
# ============================================
# Security check interval in milliseconds
SECURITY_CHECK_INTERVAL=5000

# Alert threshold (number of checks before alerting)
ALERT_THRESHOLD=3

# Enable specific security checks
ENABLE_DNS_LEAK_CHECK=true
ENABLE_IP_LEAK_CHECK=true
ENABLE_WEBRTC_LEAK_CHECK=true

# ============================================
# Performance Settings
# ============================================
# Analytics update interval in milliseconds
ANALYTICS_UPDATE_INTERVAL=1000

# Number of data points to keep in history
ANALYTICS_HISTORY_LIMIT=3600

# Enable data compression
DATA_COMPRESSION_ENABLED=false

# ============================================
# CORS Settings
# ============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Email Configuration (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@smartflowsystems.com

# ============================================
# Webhook Configuration (optional)
# ============================================
WEBHOOK_URL=https://your-webhook-endpoint.com
WEBHOOK_SECRET=your_webhook_secret

# ============================================
# Feature Flags
# ============================================
FEATURE_MULTI_HOP=true
FEATURE_OBFUSCATION=true
FEATURE_MALWARE_PROTECTION=true
FEATURE_AD_BLOCKING=true
FEATURE_TRACKER_BLOCKING=true
FEATURE_SPLIT_TUNNELING=true

# ============================================
# Storage Settings
# ============================================
STORAGE_TYPE=localStorage
STORAGE_KEY_PREFIX=sfs_vpn_

# Redis Configuration (if using Redis for storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ============================================
# Development Settings
# ============================================
DEBUG=false
HOT_RELOAD=true
SOURCE_MAPS=true

# ============================================
# Third-Party Integrations
# ============================================
# Stripe (for subscription management)
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# MaxMind GeoIP (for server location detection)
MAXMIND_LICENSE_KEY=your_maxmind_license_key

# ============================================
# Content Security Policy
# ============================================
CSP_ENABLED=true
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline';"

# ============================================
# Backup Settings
# ============================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 0 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=/backups/sfs-vpn
